	<!-- Light Animations for White + Red PAPI lights 4.0 3.7 3.5 3.1 2.9 -->	
	<!-- PAPI light n01 -->
	<animation>
		<type>select</type>
		<object-name>papi_n01_white</object-name>
			<condition>
				<greater-than-equals>
				<property>/scenery/LOWI/LOWI_r08_app_papi/app-deg</property>
				<value>4.0</value>
				</greater-than-equals>
			</condition>
    </animation>
	
		<animation>
			<type>select</type>
			<object-name>papi_n01_red</object-name>
				<condition>
					<less-than>
					<property>/scenery/LOWI/LOWI_r08_app_papi/app-deg</property>
					<value>4.0</value>
					</less-than>
				</condition>
		</animation>
	
	<!-- PAPI light n02 -->
	<animation>
		<type>select</type>
		<object-name>papi_n02_white</object-name>
			<condition>
				<greater-than-equals>
				<property>/scenery/LOWI/LOWI_r08_app_papi/app-deg</property>
				<value>3.7</value>
				</greater-than-equals>
			</condition>
    </animation>
	
		<animation>
			<type>select</type>
			<object-name>papi_n02_red</object-name>
				<condition>
					<less-than>
					<property>/scenery/LOWI/LOWI_r08_app_papi/app-deg</property>
					<value>3.7</value>
					</less-than>
				</condition>
		</animation>
	
	<!-- PAPI light n03 -->
	<animation>
		<type>select</type>
		<object-name>papi_n03_white</object-name>
			<condition>
				<greater-than-equals>
				<property>/scenery/LOWI/LOWI_r08_app_papi/app-deg</property>
				<value>3.1</value>
				</greater-than-equals>
			</condition>
    </animation>
	
		<animation>
			<type>select</type>
			<object-name>papi_n03_red</object-name>
				<condition>
					<less-than>
					<property>/scenery/LOWI/LOWI_r08_app_papi/app-deg</property>
					<value>3.1</value>
					</less-than>
				</condition>
		</animation>
	
	<!-- PAPI light n04 -->
	<animation>
		<type>select</type>
		<object-name>papi_n04_white</object-name>
			<condition>
				<greater-than-equals>
				<property>/scenery/LOWI/LOWI_r08_app_papi/app-deg</property>
				<value>2.9</value>
				</greater-than-equals>
			</condition>
    </animation>
	
		<animation>
			<type>select</type>
			<object-name>papi_n04_red</object-name>
				<condition>
					<less-than>
					<property>/scenery/LOWI/LOWI_r08_app_papi/app-deg</property>
					<value>2.9</value>
					</less-than>
				</condition>
		</animation>
	
	<animation>
		<name>papi_lights_all</name>
		<object-name>papi_n01_white</object-name>
		<object-name>papi_n02_white</object-name>
		<object-name>papi_n03_white</object-name>
		<object-name>papi_n04_white</object-name>
		<object-name>papi_n01_red</object-name>
		<object-name>papi_n02_red</object-name>
		<object-name>papi_n03_red</object-name>
		<object-name>papi_n04_red</object-name>
	</animation>
	
	<!-- Texture illuminate to get extra shiny lights 
	<animation>
	<type>material</type> 
	<object-name>papi_lights_all</object-name>
	<emission>	
			<red>1.0</red>	
			<green>1.0</green>	
			<blue>1.0</blue>
			<factor-prop>/scenery/LOWI/LOJO_oamtc_helicopter_base[0]/light[1]</factor-prop>
		</emission>
	</animation>-->
	
	<animation>
        <type>noshadow</type>
        <object-name>papi_lights_all</object-name>
    </animation>
	
	<animation>
		<object-name>papi_lights_all</object-name>
		<enable-hot type="bool">false</enable-hot>
	</animation>

    <animation>
        <type>alpha-test</type>
		<object-name>papi_lights_all</object-name>
        <alpha-factor>0.01</alpha-factor>
    </animation>
	
	<!-- LOD -->
	<animation>
		<type>range</type>
		<object-name>papi_lights_all</object-name>
			<min-m>0</min-m>
			<max-m>15000</max-m>
    </animation>
	
	<animation>
		<type>dist-scale</type>
		<object-name>papi_lights_all</object-name>
		<interpolation>
			<entry>
				<ind>0</ind>
				<dep>0.025</dep>
			</entry>
			<entry>
				<ind>300</ind>
				<dep>0.1</dep>
			</entry>
			<entry>
				<ind>1500</ind>
				<dep>0.5</dep>
			</entry>
			<entry>
				<ind>6000</ind>
				<dep>1.2</dep>
			</entry>
			<entry>
				<ind>20000</ind>
				<dep>2.1</dep>
			</entry>
		</interpolation>
	</animation>
  
